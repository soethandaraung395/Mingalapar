<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>




    </style>

     <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>

     </style>


    <!--<style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">-->

        <!--<item name="android:drawableBottom">@drawable/section_header</item>-->
        <!--<item name="android:drawablePadding">1dp</item>-->
        <!--<item name="android:layout_marginTop">1dp</item>-->
        <!--<item name="android:paddingLeft">0.5dp</item>-->

    <!--</style>-->

    <style name="SplashTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/imgsplash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TransparentTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/clear</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>




</resources>
