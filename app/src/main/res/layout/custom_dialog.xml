<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:id="@+id/back"
        android:alpha="0"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/round_rectangle"
        android:orientation="vertical">

        <com.firstappsta.mingalapar.Library.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Choose learn or text?"
            android:textColor="@color/gray"
            android:textSize="20dp"
            app:customFont="fonts/Dream_BoldItalic.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btnLearn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"

                android:clickable="true"
                android:text="Learn"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:background="@drawable/learn_box"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15" />

            <Button
                android:id="@+id/btnTest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@drawable/test_box"
                android:clickable="true"
                android:text="Test"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                />

        </LinearLayout>


    </LinearLayout>

    <com.firstappsta.mingalapar.Library.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to close"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:clickable="false"
        app:customFont="fonts/Dream_BoldItalic.ttf"/>

</LinearLayout>
</RelativeLayout>
